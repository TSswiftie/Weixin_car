.icon-sousuo:before { content: "\e624"; }

.clearfix::after{
  content:"";
  display: block;
  clear: both;
}
.divider{
  background-color: rgb(238, 238, 238);
  height: 20rpx;
  margin-top:20rpx;
}
.top{
  margin-top: 10rpx;
}
.top .condition{
  margin: 10rpx 20rpx;
}
.top i{
  margin-left: 40rpx;
  font-size: 25px;
}
.top .condition .all-cars{
  font-size: 14px;
  color: rgb(135, 135, 215);
  text-align: center;
  border: 1px solid rgb(135, 135, 215);
  width:85%;
  display: inline-block;
}
.top .condition .all-cars view{
  padding: 15rpx;
}
.price-type{
  margin-top: 20rpx;
}
.price-type .sort-item{
  text-align: center;
  font-size: 14px;
  float:left;
  width: 20%;
  margin:8rpx 10rpx;
  border:1px solid #ddd;
  border-radius: 3px;
}
.price-type .sort-item text{
  display: inline-block;
  padding: 10rpx 0;
}
.hot-brand .title{
  font-size: 14px;
  color: #AAAAAA;
  margin:20rpx;
}
.brand .nav-item{
  width:20%;
  height:120rpx;
  float: left;
  box-sizing:border-box;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  font-size:14px;
}
.brand .nav-item image{
  width:90rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.view-records .title{
  font-size: 14px;
  color: #AAAAAA;
  margin:20rpx;
}